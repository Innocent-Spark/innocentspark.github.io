<script>
    // Prevent scrolling conflicts with 3D canvas
    window.addEventListener('DOMContentLoaded', () => {
        const canvas = document.querySelector('canvas');
        if (canvas) {
            ['pointerdown', 'pointerup', 'pointerout', 'pointerenter', 
             'pointerleave', 'mousedown', 'touchstart', 'touchmove', 
             'touchend', 'dragstart', 'drag', 'dragend'].forEach(eventType => {
                canvas.addEventListener(eventType, e => {
                    e.preventDefault();
                    e.stopPropagation();
                }, { passive: false });
            });
        }
    });
</script> 
