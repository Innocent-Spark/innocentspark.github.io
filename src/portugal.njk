---
layout: base.njk
title: Portuguese Riverside Co-Living Project
bodyClass: "bg-gray-100 text-gray-900"
externalStyles:
  - https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css
pageScripts: []
customStyles: |
    /* Styles for the updates section */
    .update-entry {
        border-left: 4px solid #16a34a;
        padding-left: 1rem;
        margin-bottom: 2rem;
    }
    
    .update-date {
        font-weight: 600;
        color: #16a34a;
        margin-bottom: 0.5rem;
    }
    
    /* Ensure proper paragraph formatting */
    section p {
        margin-bottom: 1rem;
    }
    
    section h1 {
        font-size: 1.875rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }
    
    section h2 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
        margin-top: 1.5rem;
    }
    
    /* Fix bullet points display */
    section ul {
        list-style-type: disc !important;
        margin-left: 2rem !important;
        margin-bottom: 1.5rem !important;
        padding-left: 1rem !important;
    }
    
    section ol {
        list-style-type: decimal !important;
        margin-left: 2rem !important;
        margin-bottom: 1.5rem !important;
        padding-left: 1rem !important;
    }
    
    section li {
        margin-bottom: 0.5rem !important;
        display: list-item !important;
        list-style-position: outside !important;
    }
    
    section a {
        color: #16a34a;
        text-decoration: underline;
    }
    
    .home-link {
        display: inline-block;
        margin-bottom: 1rem;
        color: #16a34a;
        text-decoration: underline;
        font-weight: 600;
    }

    /* Accordion styles */
    details {
        border: 1px solid #e5e7eb;
        border-radius: 0.5rem;
        padding: 1rem;
        margin-bottom: 1rem;
        background: white;
    }

    details[open] {
        border-color: #16a34a;
    }

    summary {
        cursor: pointer;
        font-weight: 600;
        font-size: 1.125rem;
        color: #16a34a;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 0;
    }

    summary:hover {
        color: #15803d;
    }

    .house-count {
        font-size: 0.875rem;
        color: #6b7280;
        font-weight: normal;
    }

    .house-gallery {
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid #f3f4f6;
    }

    .building-specs {
        border: 1px solid #e5e7eb;
        border-radius: 0.5rem;
        background: #f9fafb;
    }

    .building-specs h4 {
        color: #16a34a;
        border-bottom: 2px solid #16a34a;
        padding-bottom: 0.5rem;
    }

---


<header class="bg-green-600 text-white py-6">
    <div class="container mx-auto px-4">
        <h1 class="text-3xl font-bold">{{ portugal.meta.title }}</h1>
        <p class="mt-2">{{ portugal.meta.headerText | markdown | safe }}</p>
    </div>
</header>

<main class="container mx-auto px-4 py-8">
    {% for section in portugal.meta.sections %}
        {% set content = portugal[section] %}
        <section class="mb-8">
            {{ content | safe }}
        </section>
    {% endfor %}
    
    <section class="mb-8">
        <h2 class="text-2xl font-bold mb-4">Gallery</h2>

        {% if media.houses.length > 0 %}
        <div class="mb-6">
            <h3 class="text-xl font-semibold mb-3">Houses</h3>
            {% for house in media.houses %}
            <details>
                <summary>
                    <span>üè† {{ house.name }}</span>
                    <span class="house-count">{{ house.count }} photos</span>
                </summary>
                <div class="house-gallery">
                    {% if house.buildingSpecs %}
                    <div class="building-specs mb-6 p-4 bg-gray-50 rounded-lg">
                        <h4 class="text-lg font-semibold mb-3 text-green-600">Building Specifications</h4>
                        
                        <div class="space-y-2">
                            <p><strong>Building footprint:</strong> {{ house.buildingSpecs.footprint }} m¬≤</p>
                            
                            {% if house.buildingSpecs.grossBuiltArea %}
                            <p><strong>Gross built area:</strong> {{ house.buildingSpecs.grossBuiltArea }} m¬≤</p>
                            {% endif %}
                            
                            {% if house.buildingSpecs.grossBuiltAreaWithExtra %}
                            <p><strong>Gross built area with extra 30%:</strong> {{ house.buildingSpecs.grossBuiltAreaWithExtra }} m¬≤</p>
                            {% endif %}
                            
                            {% if house.buildingSpecs.grossBuiltArea1Floor %}
                            <p><strong>Gross built area option 1 floor:</strong> {{ house.buildingSpecs.grossBuiltArea1Floor }} m¬≤</p>
                            {% endif %}
                            
                            {% if house.buildingSpecs.grossBuiltArea1FloorWithExtra %}
                            <p><strong>Gross built area with extra 30%:</strong> {{ house.buildingSpecs.grossBuiltArea1FloorWithExtra }} m¬≤</p>
                            {% endif %}
                            
                            {% if house.buildingSpecs.grossBuiltArea2Floors %}
                            <p><strong>Gross built area option 2 floors:</strong> {{ house.buildingSpecs.grossBuiltArea2Floors }} m¬≤</p>
                            {% endif %}
                            
                            {% if house.buildingSpecs.grossBuiltArea2FloorsWithExtra %}
                            <p><strong>Gross built area with extra 30%:</strong> {{ house.buildingSpecs.grossBuiltArea2FloorsWithExtra }} m¬≤</p>
                            {% endif %}
                        </div>
                    </div>
                    {% endif %}
                    
                    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                        {% for image in house.images %}
                        <img src="{{ image.path }}" alt="{{ image.alt }}" class="w-full h-auto rounded" loading="lazy">
                        {% endfor %}
                    </div>
                </div>
            </details>
            {% endfor %}
        </div>
        {% endif %}

        {% if media.images.length > 0 %}
        <div>
            <h3 class="text-xl font-semibold mb-3">General Photos</h3>
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                {% for image in media.images %}
                <img src="{{ image.path }}" alt="{{ image.alt }}" class="w-full h-auto rounded" loading="lazy">
                {% endfor %}
            </div>
        </div>
        {% endif %}

        {% if media.videos.length > 0 %}
        <div class="mt-6">
            <h3 class="text-xl font-semibold mb-3">Videos</h3>
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                {% for video in media.videos %}
                <video src="{{ video.path }}" controls class="w-full h-auto rounded" preload="none"></video>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </section>

    <section class="mb-8">
        <h2 class="text-2xl font-bold mb-4">Location</h2>
        <p class="mb-4">Come and visit!:</p>
        <div class="aspect-w-16 aspect-h-9">
            <iframe src="{{ portugal.meta.mapEmbedUrl }}" width="100%" height="480" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
        </div>
    </section>
</main>

<footer class="bg-gray-800 text-white py-4">
    <div class="container mx-auto px-4 text-center">
        <!-- <p>&copy; 2024 Portuguese Riverside Co-Living Project. All Rights Reserved.</p> -->
    </div>
</footer> 